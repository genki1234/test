import plotly.graph_objects as go
import plotly.express as px

# データセットのロード
df = px.data.iris()

# dimensionsのリストを作成します
dimensions = [dict(label=col, values=df[col]) for col in df.columns if col != 'species_id']

# a の値に基づいてプロットを作成
if a == True:
    fig = go.Figure(data=
        go.Parcoords(
            line=dict(color=df['species_id'],
                      colorscale=px.colors.sequential.Jet),
            dimensions=dimensions
        )
    )
else:
    fig = go.Figure(data=
        go.Parcoords(
            dimensions=dimensions
        )
    )

# HTMLファイルとして保存
config = {'staticPlot': True}
path = "output.html"  # 保存するHTMLファイルのパス
fig.write_html(path, config=config, include_plotlyjs='cdn')
