upstream apservers {
    server 127.0.0.1:3000;
}

server {
    listen 80;

    proxy_set_header    X-Real-IP       $remote_addr;
    proxy_set_header    X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header    Host            $http_host;
    proxy_redirect      off;

    proxy_max_temp_file_size    0;
    add_header Access-Control-Allow-Origin *;
    add_header Access-Control-Allow-Methods "POST, GET, OPTIONS";
    add_header Access-Control-Allow-Headers "Origin, Authorization, Accept";
    add_header Access-Control-Allow-Credentials true;

    location /employrelation_front/corporate/employee {
        alias /home/ec2-user/app/kirihare-form-web/client/build;
        try_files $uri $uri/ /index.html;
    }

    location /employrelation_front/corporate/investigate {
        alias /home/ec2-user/app/kirihare-form-web/client/build;
        try_files $uri $uri/ /index.html;
    }

    location /employrelation_front/corporate/reviewMember {
        alias /home/ec2-user/app/kirihare-form-web/client/build;
        try_files $uri $uri/ /index.html;
    }

    location /employrelation_api/ {
        proxy_pass http://127.0.0.1:3900;
    }

    location / {
        allow 202.220.202.67;
        allow 202.220.209.56;
        allow all;
        proxy_pass http://apservers;
        if ($request_method = 'OPTIONS') {
            add_header Access-Control-Allow-Origin *;
            add_header Access-Control-Allow-Methods 'GET, POST, PUT, DELETE, OPTIONS';
            add_header Access-Control-Max-Age 7200;
            add_header Content-Type 'text/plain charset=UTF-8';
            add_header Content-Length 0;
            return 204;
        }
    }
}
